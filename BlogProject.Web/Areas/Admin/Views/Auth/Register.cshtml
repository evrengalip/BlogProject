@{
    Layout = null;
}
@model UserRegisterDto

<!DOCTYPE html>
<html lang="tr" class="light-style customizer-hide" dir="ltr" data-theme="theme-default" data-assets-path="~/sneat/assets/" data-template="vertical-menu-template-free">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Kayıt Ol - BlogProject</title>

    <link rel="icon" type="image/x-icon" href="~/sneat/assets/img/favicon/favicon.ico" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Public+Sans:wght@400;600&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="~/sneat/assets/vendor/fonts/boxicons.css" />
    <link rel="stylesheet" href="~/sneat/assets/vendor/css/core.css" />
    <link rel="stylesheet" href="~/sneat/assets/vendor/css/theme-default.css" />
    <link rel="stylesheet" href="~/sneat/assets/css/demo.css" />
    <link rel="stylesheet" href="~/sneat/assets/vendor/libs/perfect-scrollbar/perfect-scrollbar.css" />
    <link rel="stylesheet" href="~/sneat/assets/vendor/css/pages/page-auth.css" />

    <script src="~/sneat/assets/vendor/js/helpers.js"></script>
    <script src="~/sneat/assets/js/config.js"></script>
</head>

<body>
    <div class="container-xxl">
        <div class="authentication-wrapper authentication-basic container-p-y">
            <div class="authentication-inner">
                <!-- Kayıt Kartı -->
                <div class="card">
                    <div class="card-body">
                        <!-- Logo -->
                        <div class="app-brand justify-content-center mb-4">
                            <a href="/" class="app-brand-link gap-2">
                                <span class="app-brand-logo demo">
                                    @* SVG logon burada kalıyor *@
                                    <svg width="25" ...> ... </svg>
                                </span>
                                <span class="app-brand-text demo text-body fw-bolder">BlogProject</span>
                            </a>
                        </div>
                        <!-- /Logo -->

                        <h4 class="mb-2 text-center">Blog'a kayıt ol 🚀</h4>
                        <p class="mb-4 text-center text-muted">Hesabınızı oluşturarak blog dünyasına adım atın!</p>

                        <form asp-controller="Auth" asp-action="Register" method="post" class="mb-3" id="formAuthentication">
                            <div asp-validation-summary="All" class="text-danger"></div>

                            <div class="mb-3">
                                <label asp-for="FirstName" class="form-label">Ad</label>
                                <input asp-for="FirstName" type="text" class="form-control" placeholder="Adınızı giriniz" autofocus />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="LastName" class="form-label">Soyad</label>
                                <input asp-for="LastName" type="text" class="form-control" placeholder="Soyadınızı giriniz" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Email" class="form-label">E-posta</label>
                                <input asp-for="Email" type="email" class="form-control" placeholder="Email adresinizi giriniz" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="PhoneNumber" class="form-label">Telefon Numarası</label>
                                <input asp-for="PhoneNumber" type="tel" class="form-control" placeholder="Telefon numaranızı giriniz" />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>

                            <div class="mb-3 form-password-toggle">
                                <label asp-for="Password" class="form-label">Şifre</label>
                                <div class="input-group input-group-merge">
                                    <input asp-for="Password" type="password" class="form-control" placeholder="Şifrenizi girin" />
                                    <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                                </div>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="mb-3 form-password-toggle">
                                <label asp-for="ConfirmPassword" class="form-label">Şifre Tekrar</label>
                                <div class="input-group input-group-merge">
                                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Şifrenizi tekrar girin" />
                                    <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                                </div>
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <button type="submit" class="btn btn-primary d-grid w-100">Kayıt Ol</button>
                            </div>
                        </form>

                        <p class="text-center">
                            <span>Zaten hesabınız var mı?</span>
                            <a asp-area="Admin" asp-controller="Auth" asp-action="Login"><span>Giriş yapın</span></a>
                        </p>
                    </div>
                </div>
                <!-- /Kayıt Kartı -->
            </div>
        </div>
    </div>

    <!-- JS -->
    <script src="~/sneat/assets/vendor/libs/jquery/jquery.js"></script>
    <script src="~/sneat/assets/vendor/libs/popper/popper.js"></script>
    <script src="~/sneat/assets/vendor/js/bootstrap.js"></script>
    <script src="~/sneat/assets/vendor/libs/perfect-scrollbar/perfect-scrollbar.js"></script>
    <script src="~/sneat/assets/vendor/js/menu.js"></script>
    <script src="~/sneat/assets/js/main.js"></script>

    <!-- Validation -->
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
