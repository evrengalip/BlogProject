<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]Blog Sitesi</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BlogProject.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <!-- Additional CSS Files -->
    <link rel="stylesheet" href="~/stand-blog/assets/css/fontawesome.css">
    <link rel="stylesheet" href="~/stand-blog/assets/css/templatemo-stand-blog.css">
    <link rel="stylesheet" href="~/stand-blog/assets/css/owl.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

    <!-- Scroll to top button CSS -->
    <style>
        #scrollToTopBtn {
            position: fixed;
            bottom: 40px;
            right: 30px;
            z-index: 99;
            border: none;
            outline: none;
            background-color: #f39c12;
            color: white;
            cursor: pointer;
            padding: 12px 16px;
            border-radius: 50%;
            font-size: 18px;
            display: none;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
            transition: background-color 0.3s ease;
        }

            #scrollToTopBtn:hover {
                background-color: #e67e22;
            }
    </style>
</head>
<body>

    <!-- ***** Preloader Start ***** -->
    <div id="preloader">
        <div class="jumper">
            <div></div><div></div><div></div>
        </div>
    </div>
    <!-- ***** Preloader End ***** -->
    <!-- Header -->
    <header class="">
        <nav class="navbar navbar-expand-lg">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index"><h2>Blog Sitesi<em>.</em></h2></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="d-flex align-items-center ms-auto">
                    <a href="/Admin" class="btn btn-dark" style="border-radius: 20px; font-size: 14px;">
                        <i class="fas fa-user-shield me-1"></i> Admin Paneli
                    </a>
                </div>
            </div>
        </nav>
    </header>

    <div style="height:150px;"></div>

    @RenderBody()

    <!-- Footer -->
    <footer id="footer" class="text-white py-5" style="background-color: #1a1d23; opacity: 0;">
        <div class="container text-center">
            <p class="mb-2">Paylaşmak güzeldir. Bilgi büyüdükçe çoğalır.</p>
            <div class="mb-3">
                <a href="https://github.com/evrengalip" target="_blank" class="text-white mx-2">
                    <i class="fab fa-github fa-lg"></i>
                </a>
            </div>
            <p class="mb-0" style="font-size: 14px;">&copy; 2025 Tüm Hakları Saklıdır | Hazırlayan: <strong>Evren Galip</strong></p>
        </div>
    </footer>

    <!-- Scroll to top button -->
    <button id="scrollToTopBtn" title="Yukarı Çık">
        <i class="fas fa-arrow-up"></i>
    </button>

    <!-- Scripts -->
    <script src="~/stand-blog/vendor/jquery/jquery.min.js"></script>
    <script src="~/stand-blog/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/stand-blog/assets/js/custom.js"></script>
    <script src="~/stand-blog/assets/js/owl.js"></script>
    <script src="~/stand-blog/assets/js/slick.js"></script>
    <script src="~/stand-blog/assets/js/isotope.js"></script>
    <script src="~/stand-blog/assets/js/accordions.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Scroll & Footer Animation Script -->
    <script>
        // Footer animasyonu (scroll ile)
        document.addEventListener("DOMContentLoaded", function () {
            const footer = document.getElementById("footer");
            const observer = new IntersectionObserver(entries => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        footer.classList.add("animate__animated", "animate__fadeInUp");
                        footer.style.opacity = 1;
                        observer.unobserve(footer);
                    }
                });
            }, { threshold: 0.2 });

            observer.observe(footer);
        });

        // Yukarı çık butonu göster/gizle
        window.onscroll = function () {
            const btn = document.getElementById("scrollToTopBtn");
            if (document.body.scrollTop > 200 || document.documentElement.scrollTop > 200) {
                btn.style.display = "block";
            } else {
                btn.style.display = "none";
            }
        };

        // Yukarı çıkma işlemi
        document.getElementById("scrollToTopBtn").addEventListener("click", function () {
            window.scrollTo({ top: 0, behavior: "smooth" });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
